@model Magicianred.LearnByDoing.MyBlog.Domain.Models.Category
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Blog category</h1>
    <p>Learn more <a href="@Url.Action("About", "Home")">about this project</a>.</p>
    @if (@Model != null)
    {
        <article class="category-details category-id-@(Model.Id)">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
        </article>
        <div class="post-list">
            @if (Model.Posts != null && Model.Posts.Any())
            {
                foreach (var post in Model.Posts)
                {
                    <div class="post-item post-id-@(post.Id)">
                        <h2><a href="@Url.Action("Post", "Home", new { Id = post.Id })">@post.Title</a></h2>
                        <p>@post.Text</p>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <article>
            <p>Category Not Found</p>
        </article>
    }

    <p>
        <a href="@Url.Action("Index", "Home")">Return to Home</a>
    </p>
</div>
